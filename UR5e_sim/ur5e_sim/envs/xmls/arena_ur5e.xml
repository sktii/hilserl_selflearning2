<mujoco model="Arena">
  <include file="ur5e.xml"/>

  <option timestep="0.002" noslip_iterations="5" noslip_tolerance="0"/>
  <!-- Limit contact points to prevent solver explosion at boundaries -->
  <size nconmax="100" njmax="500"/>

  <statistic center="0.3 0 0.4" extent=".8"/>

  <visual>
    <headlight diffuse=".4 .4 .4" ambient=".5 .5 .5"/>
    <global azimuth="160" elevation="-20" offheight="128" offwidth="128"/>
    <quality offsamples="8"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1=".3 .5 .7" rgb2="0 0 0" width="32" height="512"/>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
    <!-- <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1="0 0 0" rgb2="0 0 0"/> -->
    <material name="grid" texture="grid" texrepeat="2 2" texuniform="true" reflectance="0"/>
  </asset>

  <worldbody>
    <camera name="left" pos="0.2 0.6 0.4" target="target_cube" fovy="58" mode="targetbody"/>
    <camera name="right" pos="0.2 -0.6 0.4" target="target_cube" fovy="58" mode="targetbody"/>
    <light pos="0 0 3" dir="0 0 -1" diffuse="1 1 1" specular=".3 .3 .3"/>
    <light pos="0 -.5 .4" mode="targetbodycom" target="block" diffuse=".8 .8 .8" specular=".3 .3 .3"/>
    <geom name="floor" size="3 3 0.01" type="plane" material="grid"/>
    <body name="block" pos="0.5 0 .02">
      <freejoint name="block"/>
      <geom name="block" type="box" size=".02 .02 .02" mass="0.1" rgba=".6 .3 .6 1"/>
    </body>
    <body name="target" pos=".15 0 .5" quat="0 1 0 0" mocap="true">
      <geom name="target" type="box" size=".03 .03 .03" contype="0" conaffinity="0" rgba=".6 .3 .3 0"/>
    </body>

    <body name="target_cube" pos="0.6 0.2 0.005">
    <geom name="target_geom" type="box" size="0.04 0.04 0.005" rgba="0.8 0.1 0.1 1" friction="1 0.005 0.0001"/>
    <site name="target_site" pos="0 0 0" size="0.01" rgba="0 1 0 0.5" type="sphere"/>
    </body>

    <!-- Obstacles (Pillars) -->
    <geom name="pillar_cyl_1" type="cylinder" size="0.02 0.2" pos="0.4 0.1 0.2" rgba="0.5 0.5 0.5 1" contype="1" conaffinity="1" solimp="0.95 0.99 0.001" solref="0.005 1"/>
    <geom name="pillar_cyl_2" type="cylinder" size="0.02 0.2" pos="0.4 0.3 0.2" rgba="0.5 0.5 0.5 1" contype="1" conaffinity="1" solimp="0.95 0.99 0.001" solref="0.005 1"/>

    <!-- Obstacles (Box Pillars) -->
    <geom name="pillar_box_1" type="box" size="0.02 0.02 0.2" pos="0.45 0.15 0.2" rgba="0.5 0.5 0.5 1" contype="1" conaffinity="1" solimp="0.95 0.99 0.001" solref="0.005 1"/>
    <geom name="pillar_box_2" type="box" size="0.02 0.02 0.2" pos="0.45 0.35 0.2" rgba="0.5 0.5 0.5 1" contype="1" conaffinity="1" solimp="0.95 0.99 0.001" solref="0.005 1"/>

  </worldbody>

  <sensor>
    <framepos name="block_pos" objtype="geom" objname="block"/>
    <framequat name="block_quat" objtype="geom" objname="block"/>
  </sensor>
</mujoco>